server {
    listen 443 ssl;

    server_name ${DOMAIN_NAME};

    ssl_certificate ${CRT_CERTIFICATE};
    ssl_certificate_key ${KEY_CERTIFICATE};
    ssl_protocols TLSv1.2 TLSv1.3;

    root /var/www/html;

    index index.php index.html;

    location / {
        root /var/www/html;
        location ~ \.php$ {
            include snippets/fastcgi-php.conf;
            fastcgi_pass wordpress:9000;
        }
    }
}
